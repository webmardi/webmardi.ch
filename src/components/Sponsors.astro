---
import Button from '@/components/Button.astro';
import { t } from '@/locales';
---

<header class="text-white bg-blue">
  <div class="px-4 py-8 mx-auto md:py-24 max-w-7xl">
    <div class="md:w-1/2">
      <h2 class="text-lg font-bold md:text-xl lg:text-2xl">
        {t('homepage.sponsors.title')}
      </h2>
      <p class="mt-6">{t('homepage.sponsors.content')}</p>
    </div>
    <div class="mt-6 grid gap-6 md:mt-16 md:grid-cols-4">
      <a
        href="https://liip.ch/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 transition-colors lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/liip.svg"
          alt="Liip AG"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm uppercase px-1.5 py-0.5 bg-cyan text-blue-dark"
          >Main</span
        >
      </a>
      <a
        href="https://hidora.io/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 transition-colors lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/hidora.svg"
          alt="Hidora"
          class="w-auto"
          width="248"
          height="58"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm uppercase px-1.5 py-0.5 bg-cyan text-blue-dark"
          >Main</span
        >
      </a>
      <a
        href="https://superhuit.ch/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 px-10 transition-colors lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/superhuit.svg"
          alt="Superhuit"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm uppercase px-1.5 py-0.5 bg-cyan text-blue-dark"
          >Main</span
        >
      </a>
      <a
        href="https://www.infomaniak.com/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 px-20 transition-colors md:px-10 lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/infomaniak.svg"
          alt="Infomaniak"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm uppercase px-1.5 py-0.5 bg-cyan text-blue-dark"
          >Main</span
        >
      </a>
      <a
        href="https://heig-vd.ch/recherche/instituts/mei/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 px-20 transition-colors md:px-10 lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/heig-vd.svg"
          alt="HEIG-VD Media Engineering Institute"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm uppercase px-1.5 py-0.5 bg-cyan text-blue-dark"
          >Main</span
        >
      </a>
      <a
        href="https://cpnv.ch/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 px-20 transition-colors md:px-10 lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/cpnv.svg"
          alt="CPNV"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm text-white uppercase px-1.5 py-0.5 bg-blue"
          >Supporting</span
        >
      </a>
      <a
        href="https://jobtrek.ch/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 px-20 transition-colors md:px-10 lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/jobtrek.svg"
          alt="Jobtrek"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm text-white uppercase px-1.5 py-0.5 bg-blue"
          >Supporting</span
        >
      </a>
      <a
        href="https://www.tipee.ch/"
        target="_blank"
        rel="noopener"
        class="relative flex items-center justify-center h-40 px-20 transition-colors md:px-10 lg:h-60 bg-blue-dark md:hover:bg-blue-light"
      >
        <img
          src="/vectors/tipee.svg"
          alt="Tipee"
          class="w-auto"
          width="147"
          height="54"
        />
        <span
          class="absolute top-0 left-0 inline-block m-4 text-sm text-white uppercase px-1.5 py-0.5 bg-blue"
          >Supporting</span
        >
      </a>
    </div>
    <div
      class="flex items-center justify-center h-40 mt-6 lg:h-60 bg-blue-light"
    >
      <div class="text-center lg:mx-20">
        <p class="text-base md:text-xl">{t('homepage.sponsors.support_us')}</p>
        <Button
          target="_blank"
          rel="noopener"
          href={t('homepage.sponsors.sponsoring_packages_url')}
          itemProp="url"
          scheme="cyan"
          className="mt-6"
        >
          {t('homepage.sponsors.sponsoring_packages')}
        </Button>
      </div>
    </div>
  </div>
</header>
