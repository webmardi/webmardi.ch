---
import { t } from '@/locales';
import Button from '@/components/Button.astro';
---

<header class="text-white bg-blue">
  <div class="px-4 py-8 mx-auto md:py-24 max-w-7xl">
    <div class="md:w-1/2">
      <h2 class="text-lg font-bold md:text-xl lg:text-2xl">
        {t('homepage.sponsors.title')}
      </h2>
      <p class="mt-6">{t('homepage.sponsors.content')}</p>
    </div>
    <div class="mt-6 md:mt-16 grid md:grid-cols-3 gap-6">
      <a
        href="https://liip.ch/"
        target="_blank"
        rel="noopener"
        class="flex items-center justify-center h-40 lg:h-60 bg-blue-dark transition-colors md:hover:bg-blue-light"
      >
        <img
          src="/vectors/liip.svg"
          alt="Liip AG"
          class="w-auto"
          width="147"
          height="54"
        />
      </a>
      <a
        href="https://hidora.io/"
        target="_blank"
        rel="noopener"
        class="flex items-center justify-center h-40 lg:h-60 bg-blue-dark transition-colors md:hover:bg-blue-light"
      >
        <img
          src="/vectors/hidora.svg"
          alt="Hidora"
          class="w-auto"
          width="248"
          height="58"
        />
      </a>
      <a
        href="https://superhuit.ch/"
        target="_blank"
        rel="noopener"
        class="flex items-center justify-center h-40 px-10 lg:h-60 bg-blue-dark transition-colors md:hover:bg-blue-light"
      >
        <img
          src="/vectors/superhuit.svg"
          alt="Superhuit"
          class="w-auto"
          width="147"
          height="54"
        />
      </a>
      <a
        href="https://www.infomaniak.com/"
        target="_blank"
        rel="noopener"
        class="flex items-center justify-center h-40 px-20 md:px-10 lg:h-60 bg-blue-dark transition-colors md:hover:bg-blue-light"
      >
        <img
          src="/vectors/infomaniak.svg"
          alt="Infomaniak"
          class="w-auto"
          width="147"
          height="54"
        />
      </a>
      <div class="flex items-center justify-center h-40 lg:h-60 bg-blue-light">
        <div class="text-center lg:mx-20">
          <p>{t('homepage.sponsors.support_us')}</p>
          <Button
            target="_blank"
            rel="noopener"
            href={t('homepage.sponsors.sponsoring_packages_url')}
            itemProp="url"
            scheme="blue"
            className="mt-5 text-sm"
          >
            {t('homepage.sponsors.sponsoring_packages')}
          </Button>
        </div>
      </div>
    </div>
  </div>
</header>